<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.MainActivity">
        <androidx.camera.view.PreviewView
            android:id="@+id/camera_preview"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        </androidx.camera.view.PreviewView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/take_photo_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/add_a_photo"
            android:contentDescription="@string/add_photo"
            android:layout_margin="16dp"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/dog_list_photo_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/dog_list"
            android:layout_toStartOf="@+id/take_photo_fab"
            android:src="@drawable/dog_list_photo_fab"
            android:layout_margin="16dp"
            tools:ignore="RelativeOverlap" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/setting_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/take_photo_fab"
            android:src="@drawable/setting_fab"
            android:contentDescription="@string/setting"
            android:layout_margin="16dp"
            />
        <ProgressBar
            android:id="@+id/pbLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

    </RelativeLayout>
</layout>